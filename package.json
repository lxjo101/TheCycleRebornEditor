{
  "name": "cycle-frontier-save-editor",
  "version": "1.0.1",
  "description": "Desktop Save Editor for The Cycle: Reborn - Edit your inventory through MongoDB",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run server\" \"wait-on http://localhost:3000 && electron .\"",
    "server": "node server.js",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build",
    "setup": "npm install && echo 'Setup complete! Run npm start to launch the desktop app'",
    "test": "node -e \"console.log('Testing MongoDB connection...'); require('./server.js');\"",
    "clean": "rmdir /s /q dist 2>nul & rmdir /s /q node_modules\\.cache 2>nul & echo Cache cleared"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mongodb": "^6.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "concurrently": "^8.2.2",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0",
    "nodemon": "^3.0.1"
  },
  "build": {
  "appId": "com.cyclefrontier.saveeditor",
  "productName": "The Cycle Reborn Save Editor",
  "directories": {
    "output": "dist"
  },
  "files": [
    "main.js",
    "server.js",
    "preload.js",
    "public/**/*",
    "index.html",
    "itemIds.json",
    "itemConfigs.json",
    "node_modules/**/*",
    "!node_modules/.cache",
    "!node_modules/electron-builder",
    "!node_modules/nodemon",
    "!node_modules/concurrently",
    "!node_modules/wait-on"
  ],
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "icon.ico"
  },
  "portable": {
    "artifactName": "TheCycleReborn-SaveEditor.exe"
  }
},
  "keywords": [
    "cycle",
    "reborn",
    "save",
    "editor",
    "mongodb",
    "game",
    "inventory",
    "electron",
    "desktop"
  ],
  "author": "lxjo",
  "license": "MIT",
  "repository": {
    "type": "git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "config": {
    "mongoUrl": "mongodb://localhost:27017",
    "database": "ProspectDb",
    "collection": "PlayFabUserData",
    "inventoryKey": "Inventory"
  }
}